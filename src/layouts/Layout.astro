---
import FloatingButtons from "../components/FloatingButtons";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <!-- Open Graph / Meta Tags -->
    <meta property="og:title" content="Pool Party 2025 🎉 | ¡Únete a la diversión!" />
    <meta property="og:description" content="Te invito a la mejor pool party del 2025. ¡Música, piscina, amigos y mucha diversión! No te pierdas este evento inolvidable." />
    <meta property="og:image" content="/images/robert-og.jpeg" />
    <meta property="og:url" content="https://pool-party-2025.vercel.app" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pool Party 2025 🎉 | ¡Únete a la diversión!" />
    <meta name="twitter:description" content="Te invito a la mejor pool party del 2025. ¡Música, piscina, amigos y mucha diversión! No te pierdas este evento inolvidable." />
    <meta name="twitter:image" content="/images/robert-og.jpeg" />

    <style>
      html {
        scroll-behavior: smooth;
      }

      /* Estilos para el scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, #f59e0b, #ef4444);
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(to bottom, #f97316, #dc2626);
      }

      /* Ajustes para dispositivos táctiles */
      @media (hover: none) {
        ::-webkit-scrollbar {
          width: 0;
        }
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col bg-gradient-to-b from-amber-500 via-orange-400 to-red-400 text-black font-sans overflow-x-hidden">
    <main class="flex-1 relative">
      <slot />
      <div id="modal-root"></div>
      <FloatingButtons client:only="solid-js" />
    </main>
    <footer class="w-full bg-black/90 backdrop-blur-md text-white text-center py-6 border-t border-white/10">
      <p class="text-sm">Pool Party 2025 · Todos los derechos reservados</p>
    </footer>
  </body>
</html>
