---
import Countdown from "../components/Countdown.jsx";
import ParallaxHero from "../components/ParallaxHero";
import Layout from "../layouts/Layout.astro";


import { InfoSection, LocationSection } from "../components/InfoSection.jsx";
import FAQSection from "../components/FAQSection.jsx";
import ActivitySection from "../components/ActivitySection";
---

<Layout>

  <div class="min-h-[calc(100vh-4rem)]">

    <!-- Hero Section con Parallax -->
       <!-- Countdown -->
       <ParallaxHero client:load>
        <Countdown slot="countdown" client:load />
      </ParallaxHero>



  <!-- Sección de Información -->
<section id="info" class="py-12 sm:py-20 bg-gradient-to-b from-gray-900 to-blue-900">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Título de la sección -->
    <div class="text-center mb-10 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Información del Evento</h2>
      <p class="text-lg sm:text-xl text-gray-300 max-w-3xl mx-auto">
        Todo lo que necesitas saber para disfrutar de este día especial
      </p>
    </div>

    <!-- Contenido principal -->
    <div class="grid md:grid-cols-2 gap-6 sm:gap-12">
      <!-- Columna de información -->
      <div class="space-y-6">
        <InfoSection client:visible />
        <div class="block md:hidden">
          <LocationSection client:visible />
        </div>
        <FAQSection client:visible />
      </div>

      <!-- Mapa y ubicación (visible solo en desktop) -->
      <div class="hidden md:block md:sticky md:top-8">
        <LocationSection client:visible />
      </div>
    </div>
  </div>
</section>

  <!-- Actividades Section Mejorada -->
  <ActivitySection client:visible />
</div>

<!-- Botón de Scroll to Top -->
<div class="fixed bottom-4 right-4 z-50 opacity-0 transition-opacity duration-300" id="scroll-top-button">
  <button
    class="bg-blue-500 hover:bg-blue-600 text-white rounded-full p-4 shadow-lg transition-all duration-300 transform hover:scale-110"
    onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
  >
    <i class="fas fa-arrow-up"></i>
  </button>
</div>

<!-- Botón de Compartir -->
<div class="fixed bottom-4 left-4 z-50">
  <div class="relative">
    <button
      class="bg-blue-500 hover:bg-blue-600 text-white rounded-full p-4 shadow-lg transition-all duration-300 transform hover:scale-110"
      id="share-button"
    >
      <i class="fas fa-share-alt"></i>
    </button>
    <div class="hidden absolute bottom-full left-0 mb-2 w-48 bg-white rounded-lg shadow-xl z-10" id="share-menu">
      <a
        href="#"
        class="block px-4 py-2 text-gray-700 hover:bg-blue-50 transition-colors rounded-t-lg"
        onclick="shareOnWhatsApp()"
      >
        <i class="fab fa-whatsapp mr-2 text-green-500"></i>
        WhatsApp
      </a>
      <a
        href="#"
        class="block px-4 py-2 text-gray-700 hover:bg-blue-50 transition-colors"
        onclick="shareOnFacebook()"
      >
        <i class="fab fa-facebook mr-2 text-blue-500"></i>
        Facebook
      </a>
      <a
        href="#"
        class="block px-4 py-2 text-gray-700 hover:bg-blue-50 transition-colors rounded-b-lg"
        onclick="copyLink()"
      >
        <i class="fas fa-link mr-2 text-gray-500"></i>
        Copiar Link
      </a>
    </div>
  </div>
</div>



</Layout>