---
// Importación del layout principal que contiene la estructura base de la página
import Layout from "../layouts/Layout.astro";

// Componente Hero con efecto parallax - Sección principal que se muestra al inicio
// con efecto de desplazamiento de fondo
import ParallaxHero from "../components/ParallaxHero";

// Componentes para mostrar la información general del evento y la ubicación
// InfoSection: Detalles del evento
// LocationSection: Mapa y dirección del lugar
import { InfoSection, LocationSection } from "../components/InfoSection.jsx";

// Componente que muestra las actividades planificadas para el evento
// Lista todas las actividades y sus horarios
import ActivitySection from "../components/ActivitySection";

// Componente que muestra información sobre la organización del evento
// Incluye detalles sobre los organizadores y contactos


// Sección dedicada a información sobre mascotas
// Políticas y reglas sobre mascotas en el evento
import PetsSection from "../components/pagina/PetsSection";

// Componentes relacionados con la confirmación de asistencia
// ConfirmationSection: Formulario de confirmación y detalles de pago
// PartialFAQ: Preguntas frecuentes sobre la confirmación
import ConfirmationSection from "../components/pagina/ConfirmationSection";


// Sección de créditos y agradecimientos
import CreditosPreview from "../components/CreditosPreview";

// Sección de apuestas deportivas
import ApuestasPreview from "../components/ApuestasPreview";

---

<Layout>
  <div class="relative min-h-screen">
    {/* Decoración de fondo global */}
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      {/* Destellos cálidos */}
      <div class="absolute top-1/4 right-1/4 w-[300px] h-[300px] bg-gradient-to-br from-amber-500/10 to-orange-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 0s; animation-duration: 5s;"></div>
      <div class="absolute bottom-1/3 left-1/3 w-[250px] h-[250px] bg-gradient-to-br from-yellow-500/10 to-amber-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s; animation-duration: 7s;"></div>
      <div class="absolute top-2/3 right-1/3 w-[200px] h-[200px] bg-gradient-to-br from-orange-500/10 to-red-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 3s; animation-duration: 6s;"></div>
    </div>

    {/* Contenido principal */}
    <div class="relative">
      {/* Contenedor principal con altura mínima para ocupar toda la pantalla */}
      <div class="min-h-[calc(100vh-4rem)]">
        {/* 1. Hero Section - Primera vista que verán los usuarios */}
        <ParallaxHero client:load />

        {/* 2. Sección de Información General */}
        <section id="info" class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-gray-950 via-gray-900 to-slate-900"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
            {/* Destello cálido sutil */}
            <div class="absolute top-1/4 right-1/4 w-[200px] h-[200px] bg-gradient-to-br from-amber-500/5 to-orange-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s; animation-duration: 8s;"></div>
          </div>
          <div class="absolute inset-x-0 -bottom-1 h-8 bg-gradient-to-b from-slate-900 to-slate-900"></div>

          <div class="relative max-w-6xl mx-auto px-4">
            <div class="text-center mb-6 sm:mb-10">
              <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
                Información del Evento
              </h2>
              <p class="text-lg sm:text-xl text-blue-100 max-w-3xl mx-auto">
                Todo lo que necesitas saber para disfrutar de este día especial
              </p>
            </div>

            <div class="grid md:grid-cols-2 gap-6 sm:gap-8">
              <div class="space-y-6 sm:space-y-8">
                <InfoSection client:visible />
                <div class="block md:hidden">
                  <LocationSection client:visible />
                </div>
              </div>
              <div class="hidden md:block md:sticky md:top-8">
                <LocationSection client:visible />
              </div>
            </div>
          </div>
        </section>

        {/* 3. Sección de Actividades */}
        <section id="actividades" class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-blue-950 to-slate-900"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
            {/* Destello cálido sutil */}
            <div class="absolute bottom-1/3 left-1/4 w-[250px] h-[250px] bg-gradient-to-br from-yellow-500/5 to-amber-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 3s; animation-duration: 6s;"></div>
          </div>
          <div class="absolute inset-x-0 -bottom-1 h-8 bg-gradient-to-b from-slate-900 to-slate-900"></div>

          <div class="relative max-w-7xl mx-auto px-4">
            <ActivitySection client:visible />
          </div>
        </section>

        {/* 4. Sección de Apuestas */}
        <section class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-emerald-950 to-slate-900"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-emerald-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-green-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
          </div>
          <div class="absolute inset-x-0 -bottom-1 h-8 bg-gradient-to-b from-slate-900 to-slate-900"></div>

          <div class="relative max-w-7xl mx-auto px-4">
            <ApuestasPreview client:visible />
          </div>
        </section>

        {/* 6. Sección de Mascotas */}
        <section id="mascotas" class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-cyan-950 to-slate-900"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
            {/* Destello cálido sutil */}
            <div class="absolute top-1/3 right-1/3 w-[180px] h-[180px] bg-gradient-to-br from-orange-500/5 to-yellow-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s; animation-duration: 7s;"></div>
          </div>
          <div class="absolute inset-x-0 -bottom-1 h-8 bg-gradient-to-b from-slate-900 to-slate-900"></div>

          <div class="relative max-w-7xl mx-auto px-4">
            <PetsSection client:visible />
          </div>
        </section>

        {/* 7. Sección de Confirmación */}
        <section id="confirmacion" class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-blue-950 to-gray-950"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
          </div>
          <div class="absolute inset-x-0 -bottom-1 h-8 bg-gradient-to-b from-gray-950 to-gray-950"></div>

          <div class="relative max-w-7xl mx-auto px-4">
            <ConfirmationSection client:visible />
          </div>
        </section>

        {/* Sección de la Anfitriona */}
        <section class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-purple-950 to-gray-950"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-pink-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
          </div>
          <div class="absolute inset-x-0 -bottom-1 h-8 bg-gradient-to-b from-gray-950 to-gray-950"></div>

          <div class="relative max-w-7xl mx-auto px-4">
            <div class="bg-gradient-to-br from-gray-900/80 to-gray-800/80 backdrop-blur-md rounded-3xl p-8 md:p-12 border border-gray-700/50 shadow-2xl">
              <div class="grid md:grid-cols-2 gap-8 md:gap-16 items-center">
                {/* Contenido */}
                <div class="space-y-6">
                  <span class="inline-block text-sm font-medium tracking-wider text-purple-400 uppercase px-4 py-2 bg-purple-500/10 rounded-lg border border-purple-500/20">
                    La Anfitriona
                  </span>
                  <h2 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-400 via-pink-300 to-purple-400 text-transparent bg-clip-text">
                    Leidymar Torres
                  </h2>
                  <p class="text-xl text-purple-200 font-medium">
                    Esposa, Decoradora y Alma de la Fiesta
                  </p>
                  <p class="text-gray-300 leading-relaxed">
                    Con su creatividad y dedicación, ha transformado cada detalle de esta celebración en algo especial.
                    Su toque personal hace que esta fiesta sea única y memorable.
                  </p>
                  <ul class="grid gap-4">
                    <li class="flex items-center gap-3 text-gray-200">
                      <i class="fas fa-paint-brush text-pink-400"></i>
                      <span>Diseñadora principal de la decoración</span>
                    </li>
                    <li class="flex items-center gap-3 text-gray-200">
                      <i class="fas fa-star text-pink-400"></i>
                      <span>Coordinadora de actividades</span>
                    </li>
                    <li class="flex items-center gap-3 text-gray-200">
                      <i class="fas fa-heart text-pink-400"></i>
                      <span>Organizadora del evento</span>
                    </li>
                  </ul>
                </div>

                {/* Imagen */}
                <div class="relative">
                  <div class="relative rounded-3xl overflow-hidden shadow-2xl border border-gray-700/50 aspect-[3/4]">
                    <img
                      src="/images/leidy.jpeg"
                      alt="Leidy - La Anfitriona"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                  </div>
                  {/* Decoración flotante */}
                  <div class="absolute -bottom-6 left-1/2 -translate-x-1/2 bg-black/80 backdrop-blur-md rounded-2xl p-4 text-center shadow-2xl border border-gray-700/50 w-4/5">
                    <p class="text-sm font-medium text-purple-300">
                      "Cada detalle cuenta para hacer de este día algo inolvidable"
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        {/* 8. Sección de Créditos */}
        <section class="relative py-16">
          <div class="absolute inset-0 bg-gradient-to-b from-gray-950 via-slate-900 to-gray-950"></div>
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-1/2 -right-1/2 w-[800px] h-[800px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
          </div>

          <div class="relative max-w-7xl mx-auto px-4">
            <CreditosPreview client:visible />
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>
