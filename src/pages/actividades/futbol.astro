---
import Lightbox from "../../components/Lightbox"
import Layout from "../../layouts/Layout.astro"
import { jugadores } from "../../data/jugadores";
import PlayersSection from "../../components/pagina/PlayersSection";
title: "Fútbol"

const robertImages = [
  {
    src: "/images/robert-fut.jpeg",
    alt: "Robert jugando",
  },

];

const broskyImages = [
  {
    src: "/images/brosky.jpeg",
    alt: "Brosky FC jugando",
  },

];

const portalesImages = [
  {
    src: "/images/portales.jpeg",
    alt: "Portales FC",
  },

];


---

<Layout>
  <section class="min-h-screen relative">
    {/* Fondo con gradientes y efectos */}
    <div class="absolute inset-0 bg-gradient-to-b from-gray-950 via-slate-900 to-gray-950"></div>

    {/* Efectos decorativos */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      {/* Círculos principales */}
      <div class="absolute -top-1/2 -right-1/2 w-[1000px] h-[1000px] bg-gradient-to-br from-emerald-500/20 to-green-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute -bottom-1/2 -left-1/2 w-[1000px] h-[1000px] bg-gradient-to-br from-green-500/20 to-emerald-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>

      {/* Destellos cálidos sutiles */}
      <div class="absolute top-1/3 right-1/4 w-[200px] h-[200px] bg-gradient-to-br from-amber-500/10 to-orange-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s; animation-duration: 6s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-[250px] h-[250px] bg-gradient-to-br from-yellow-500/10 to-amber-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 3s; animation-duration: 8s;"></div>
    </div>

    {/* Hero Section */}
    <div class="relative h-[60vh] min-h-[500px] flex items-center justify-center">
      {/* Imagen de fondo con overlay */}
      <div class="absolute inset-0 overflow-hidden">
        <img
          src="/images/cesped.jpeg"
          alt="Campo de fútbol"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-gray-950/50 via-gray-900/50 to-gray-950/90 backdrop-blur-sm"></div>
      </div>

      {/* Contenido del Hero */}
      <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-white via-green-100 to-white bg-clip-text text-transparent">
          Fútbol en el Evento
        </h1>
        <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
          Prepárate para un torneo amistoso lleno de emoción, donde la diversión y el compañerismo son los protagonistas.
        </p>
        <a
          href="#info"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-gradient-to-r from-green-500 via-emerald-500 to-green-500 text-white font-medium hover:shadow-lg hover:shadow-green-500/25 transition-all duration-300 transform hover:scale-105"
        >
          <span>Ver Detalles</span>
          <i class="fas fa-arrow-down animate-bounce"></i>
        </a>
      </div>

      {/* Botón de navegación */}
      <nav class="absolute top-8 left-8">
        <a
          href="/"
          class="group inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 text-white transition-all duration-300 backdrop-blur-sm"
        >
          <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
          <span>Volver al inicio</span>
        </a>
      </nav>
    </div>

    {/* Contenido Principal */}
    <div id="info" class="relative max-w-7xl mx-auto px-4 py-16 space-y-16">
      {/* Información General */}
      <div class="bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
        <h2 class="text-3xl font-bold text-white mb-8 flex items-center gap-3">
          <i class="fas fa-info-circle text-green-400"></i>
          Información General
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
          <div class="bg-white/5 p-6 rounded-2xl">
            <span class="text-sm text-green-300 block mb-2">Duración</span>
            <p class="text-xl text-white">20 min por partido</p>
          </div>
          <div class="bg-white/5 p-6 rounded-2xl">
            <span class="text-sm text-green-300 block mb-2">Equipos</span>
            <p class="text-xl text-white">5 vs 5</p>
          </div>
          <div class="bg-white/5 p-6 rounded-2xl">
            <span class="text-sm text-green-300 block mb-2">Modalidad</span>
            <p class="text-xl text-white">Todos contra todos</p>
          </div>
          <div class="bg-white/5 p-6 rounded-2xl">
            <span class="text-sm text-green-300 block mb-2">Premios</span>
            <p class="text-xl text-white">Top 3 equipos</p>
          </div>
        </div>
      </div>

      {/* Reglas del Juego */}
      <div class="bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
        <h2 class="text-3xl font-bold text-white mb-8 flex items-center gap-3">
          <i class="fas fa-scroll text-green-400"></i>
          Reglas del Juego
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-white mb-4">Reglas Básicas</h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Partidos de 20 minutos sin descanso</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>5 jugadores por equipo en cancha</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Cambios ilimitados</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Sin fuera de juego</span>
              </li>
            </ul>
          </div>
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-white mb-4">Fair Play</h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Juego limpio y respeto mutuo</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Auto-arbitraje entre equipos</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Espíritu deportivo ante todo</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-check text-green-400 mt-1"></i>
                <span>Diversión garantizada</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      {/* Jugadores */}
      <div class="bg-white/5 backdrop-blur-sm rounded-3xl p-4 border border-white/10">
        <h2 class="text-3xl font-bold text-white mb-8 flex items-center gap-3">
          <i class="fas fa-users text-green-400"></i>
          Jugadores
        </h2>
        <PlayersSection client:load />
      </div>

      {/* Premios y Reconocimientos */}
      <div class="bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
        <h2 class="text-3xl font-bold text-white mb-8 flex items-center gap-3">
          <i class="fas fa-trophy text-yellow-400"></i>
          Premios
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {/* Segundo Lugar */}
          <div class="relative group order-2 md:order-1">
            <div class="absolute inset-0 bg-gradient-to-br from-gray-500/20 to-gray-400/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
            <div class="relative h-full bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/10 flex flex-col items-center justify-center text-center transition-transform duration-300 group-hover:scale-[1.02]">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-gray-400 to-gray-500 flex items-center justify-center text-white text-2xl mb-4">
                <span>2°</span>
              </div>
              <h3 class="text-xl font-semibold text-white mb-2">Segundo Lugar</h3>
              <p class="text-gray-300">Premio sorpresa</p>
            </div>
          </div>

          {/* Primer Lugar */}
          <div class="relative group order-1 md:order-2">
            <div class="absolute inset-0 bg-gradient-to-br from-yellow-500/20 to-amber-400/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
            <div class="relative h-full bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/10 flex flex-col items-center justify-center text-center transition-transform duration-300 group-hover:scale-[1.02]">
              <div class="w-20 h-20 rounded-full bg-gradient-to-br from-yellow-400 to-amber-500 flex items-center justify-center text-white text-3xl mb-4">
                <span>1°</span>
              </div>
              <h3 class="text-2xl font-semibold text-white mb-2">Campeón</h3>
              <p class="text-yellow-300">Gran premio sorpresa</p>
            </div>
          </div>

          {/* Tercer Lugar */}
          <div class="relative group order-3">
            <div class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
            <div class="relative h-full bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/10 flex flex-col items-center justify-center text-center transition-transform duration-300 group-hover:scale-[1.02]">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-orange-500 to-amber-600 flex items-center justify-center text-white text-2xl mb-4">
                <span>3°</span>
              </div>
              <h3 class="text-xl font-semibold text-white mb-2">Tercer Lugar</h3>
              <p class="text-gray-300">Premio sorpresa</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>